@using Resources;
<!--Newsletter Area Start-->
<div class="newsletter-area">
    <div class="container">
        <div class="row">
            <div class="col-md-5 col-sm-5">
                <div class="newsletter-content">
                    <h3>@UserLang.Subscribe</h3>
                    <h2>@UserLang.ToOutNewsleetter</h2>
                </div>
            </div>
            <div class="col-md-7 col-sm-7">
                <div class="newsletter-form">
                    <form action="#">
                        <div class="subscribe-form">
                            <input type="email" name="email" placeholder="@UserLang.EnterYourEmailAddress">
