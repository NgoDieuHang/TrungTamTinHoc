@model Course
@using Resources
@using TrungTamTinHoc.Areas.Home.Models.Schema
@{
    Course course = null;
    if (Model != null)
    {
        course = Model;
    }

}
<!--Course Area Start-->
<div class="course-area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-title-wrapper">
                    <div class="section-title">
                        <h3>@UserLang.Courses</h3>
                        <p>@Html.Raw(course.Title)</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (KhoaHoc item in course.KhoaHoc)
    {
        <div class="col-md-4 col-sm-6">
            <div class="single-item">
                <div class="single-item-image overlay-effect">
                    <a href="@Html.Raw(item.BeautyId)"><img src="@Html.Raw(item.AnhMinhHoa)" alt=""></a>
                </div>
                <div class="single-item-text">
                    <h4 class="text-center"><a href="@Html.Raw(item.BeautyId)">@Html.Raw(item.TenKhoaHoc)</a></h4>
                    <div class="single-item-text-info">
                        <span>By: <span>@Html.Raw(item.TacGia)</span></span>
                        <span>Date: <span>@Html.Raw(item.NgayDang.ToString("dd/MM/yyyy"))</span></span>
                    </div>
                    <p>@Html.Raw(item.TomTat)</p>
                    <div class="single-item-content">
                        <div class="single-item-comment-view">
                            <span><i class="zmdi zmdi-eye"></i>@Html.Raw(item.SoLuongView)</span>
                            <span><i class="zmdi zmdi-comments"></i>@Html.Raw(item.SoLuongComment)</span>
                        </div>
                        <div class="single-item-rating">
                            @{
                                float DiemDanhGia = item.DiemDanhGia;
                                for (int i = 0; i < 5; i++)
                                {
                                    if (DiemDanhGia > 0.5)
                                    {
                                        <i class="zmdi zmdi-star"></i>
                                    }
                                    else
                                    {
                                        if (DiemDanhGia > 0)
                                        {
                                            <i class="zmdi zmdi-star-half"></i>
                                        }
                                        else
                                        {
                                            <i class="zmdi zmdi-star-outline"></i>
                                        }
                                    }
                                    DiemDanhGia--;
                                }

                            }
                            
                            
                        </div>
                    </div>
                </div>
                <div class="button-bottom">
                    <a href="@Html.Raw(item.BeautyId)" class="button-default">@UserLang.Register</a>
                </div>
            </div>
        </div>

}
            <div class="col-md-12 col-sm-12 text-center">
                <a href="#" class="button-default button-large">@UserLang.AllOfCourses<i class="zmdi zmdi-chevron-right"></i></a>
            </div>
        </div>
    </div>
</div>
<!--End of Course Area-->
